html
    head
        meta(charset="utf-8")
        title 管理员登陆界面
        link(rel='stylesheet' type='text/css' href='/stylesheets/adminlogin.css')
        link(rel='shortcut icon' href='http://moonbuy.cn/mall/static/images/favicon.ico' type='image/x-icon')
        script(src="/javascripts/jquery.js")
